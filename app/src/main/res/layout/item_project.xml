<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/project_image"
        android:layout_width="360px"
        android:layout_height="270px"
        android:layout_margin="30px" />

    <TextView
        android:id="@+id/project_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/project_image"
        android:layout_marginRight="30px"
        android:layout_toRightOf="@id/project_image"
        android:textColor="@color/textBlack1" />

    <TextView
        android:id="@+id/project_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/project_image"
        android:layout_toRightOf="@id/project_image"
        android:text="手机：18532159723"
        android:textColor="@color/textBlack2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/project_call"
        android:layout_width="182px"
        android:layout_height="62px"
        android:layout_alignBottom="@id/project_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:background="@drawable/bg4dp_theme_btn"
        android:gravity="center"
        android:text="拨号"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/project_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/project_phone"
        android:layout_marginBottom="10px"
        android:layout_toRightOf="@id/project_image"
        android:text="1100元"
        android:textColor="@color/textgreen1"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="#989898" />

</com.zhy.autolayout.AutoRelativeLayout>