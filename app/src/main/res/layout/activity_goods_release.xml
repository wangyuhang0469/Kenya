<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.kenya.ui.city.used.GoodsReleaseActivity">

    <include layout="@layout/title_bar2"/>

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144px"
        android:layout_marginBottom="160px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="标题"
                    android:textColor="@color/textBlack2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/edit_base"
                    android:hint="一句话描述下你的商品吧"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"/>
                
            </com.zhy.autolayout.AutoLinearLayout>

            <include layout="@layout/line"/>

            <EditText
                android:id="@+id/brief"
                android:layout_width="match_parent"
                android:layout_height="530px"
                style="@style/edit_base"
                android:hint="描述一下物品的细节或故事"
                android:gravity="left"
                android:paddingTop="57px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:lineSpacingMultiplier="1.3"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/city_used_camera"
                    android:layout_marginLeft="30px"/>

                <ImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/city_used_camera"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/city_used_camera"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">
                <ImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/city_used_camera"
                    android:layout_marginLeft="30px"/>

                <ImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/city_used_camera"
                    android:layout_centerHorizontal="true"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150px"
                style="@style/edit_base2"
                android:hint="输入您想卖出的价格"
                android:gravity="center"
                android:layout_marginTop="24px"/>

            <include layout="@layout/line"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150px"
                style="@style/edit_base2"
                android:hint="输入联系电话"
                android:gravity="center"/>

            <include layout="@layout/line"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>


    <TextView
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</com.zhy.autolayout.AutoRelativeLayout>
