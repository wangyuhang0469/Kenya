<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.kenya.ui.city.used.GoodsReleaseActivity">

    <include layout="@layout/title_bar2" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/release"
        android:layout_marginTop="144px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50px">


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="标题"
                    android:textColor="@color/textBlack2" />

                <EditText
                    android:id="@+id/goodsname"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="一句话描述下你的商品吧"
                    android:paddingLeft="30px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/goodsdesc"
                style="@style/edit_base"
                android:layout_width="match_parent"
                android:layout_height="530px"
                android:gravity="left"
                android:hint="描述一下物品的细节或故事"
                android:lineSpacingMultiplier="1.3"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="57px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/images"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:src="@drawable/city_used_camera" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/city_used_camera" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <EditText
                android:id="@+id/goodsprice"
                style="@style/edit_base2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="24px"
                android:gravity="center"
                android:hint="输入您想卖出的价格" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/goodsusername"
                style="@style/edit_base2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:hint="输入联系人" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/goodsphone"
                style="@style/edit_base2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:hint="输入联系电话" />

            <include layout="@layout/line" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>


    <TextView
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="17sp" />

</com.zhy.autolayout.AutoRelativeLayout>
