<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical"
    tools:context="com.example.administrator.kenya.ui.myself.myrelease.MyInformationActivity">

    <include layout="@layout/title_bar2" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/avatarBar"
        style="@style/my_center_bar"
        android:layout_height="220px">

        <TextView
            style="@style/my_center_tv"
            android:layout_centerVertical="true"
            android:text="@string/avatar"
            android:textColor="@color/textBlack1"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/go"
            android:src="@drawable/avatar" />

        <ImageView
            android:id="@+id/go"
            style="@style/my_center_inter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/my_center_inter2" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/line" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/userNameBar"
        style="@style/my_center_bar"
        android:layout_height="150px">

        <TextView
            style="@style/my_center_tv"
            android:layout_centerVertical="true"
            android:text="@string/name"
            android:textColor="@color/textBlack1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/go2"
            android:textColor="@color/textBlack3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/go2"
            style="@style/my_center_inter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/my_center_inter2" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/line" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/birthdayBar"
        style="@style/my_center_bar"
        android:layout_height="150px">

        <TextView
            style="@style/my_center_tv"
            android:layout_centerVertical="true"
            android:text="@string/birthday"
            android:textColor="@color/textBlack1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/go3"
            android:textColor="@color/textBlack3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/go3"
            style="@style/my_center_inter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/my_center_inter2" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/line" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/sexBar"
        style="@style/my_center_bar"
        android:layout_height="150px">

        <TextView
            style="@style/my_center_tv"
            android:layout_centerVertical="true"
            android:text="@string/sex"
            android:textColor="@color/textBlack1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/go4"
            android:textColor="@color/textBlack3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/go4"
            style="@style/my_center_inter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/my_center_inter2" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        style="@style/my_center_bar"
        android:layout_height="150px"
        android:layout_marginTop="20px">

        <TextView
            style="@style/my_center_tv"
            android:layout_centerVertical="true"
            android:text="@string/phone_no."
            android:textColor="@color/textBlack1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:textColor="@color/textBlack3"
            android:textSize="16sp" />


    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
