<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.kenya.ui.myself.LoginActivity">

    <include layout="@layout/login_title_bar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <com.zhy.autolayout.AutoLinearLayout
            style="@style/bar1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_user2" />

            <EditText
                android:id="@+id/phone"
                style="@style/edit_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:inputType="phone" />
        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line_max" />

        <com.zhy.autolayout.AutoLinearLayout
            style="@style/bar1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_pwd2" />

            <EditText
                android:id="@+id/password"
                style="@style/edit_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="输入密码"
                android:password="true" />
        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line_max" />

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账号注册"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="忘记密码？"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/login"
            style="@style/btn"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg20dp_theme"
            android:text="登   录"
            android:textColor="@color/white" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
