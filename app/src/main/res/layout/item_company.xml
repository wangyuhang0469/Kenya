<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="350px"
        android:layout_height="250px"
        android:layout_margin="30px"
        android:background="@drawable/linshi5"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/company_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:textColor="@color/textBlack1" />

        <TextView
            android:id="@+id/company_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/company_phone"
            android:text=""
            android:textColor="@color/textgreen1"
            android:textSize="17sp" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#989898" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="149px"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/company_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_Title"
            android:layout_toRightOf="@id/company_image"
            android:textColor="@color/textBlack3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/company_call"
            android:layout_width="182px"
            android:layout_height="62px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:background="@drawable/bg4dp_theme_btn"
            android:gravity="center"
            android:text="@string/call"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/company_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机：18532159723"
        android:textColor="@color/textBlack2"
        android:textSize="13sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/base_bg" />



</com.zhy.autolayout.AutoLinearLayout>