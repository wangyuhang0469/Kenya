<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.kenya.ui.city.house.HouseInfoActivity">

    <include layout="@layout/title_bar2" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/release"
        android:layout_marginTop="144px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50px">

            <EditText
                android:id="@+id/house_name"
                style="@style/edit_base2"
                android:gravity="center_vertical"
                android:hint="@string/enter_your_title"
                android:maxLength="120"
                android:paddingLeft="30px" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/house_home"
                style="@style/edit_base2"
                android:gravity="center_vertical"
                android:hint="@string/please_choose_the_type_of_hoose_e.g._one_bedroom"
                android:maxLength="50"
                android:paddingLeft="30px" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/house_square"
                style="@style/edit_base2"
                android:gravity="center_vertical"
                android:hint="@string/enter_the_size_of_house_in_square_metres"
                android:inputType="number"
                android:maxLength="5"
                android:paddingLeft="30px" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/house_address"
                style="@style/edit_base2"
                android:gravity="center_vertical"
                android:hint="@string/enter_the_exact_location"
                android:maxLength="50"
                android:paddingLeft="30px" />

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px">

                <EditText
                    android:id="@+id/house_info_desc"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:hint="@string/describe_in_words_about_other_details_of_your_house"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:maxLength="1000"
                    android:paddingTop="30px" />

            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/house_info_img1"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/house_info_img2"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/house_info_img3"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:src="@drawable/city_used_camera" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">

                <ImageView
                    android:id="@+id/house_info_img4"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/house_info_img5"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/city_used_camera" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <EditText
                android:id="@+id/house_price"
                style="@style/edit_base2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="24px"
                android:gravity="center"
                android:hint="@string/mothly_rent"
                android:maxLength="10"
                android:inputType="number" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/house_penson"
                style="@style/edit_base2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:maxLength="35"
                android:hint="@string/enter_personal_contacts" />

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/house_phone"
                style="@style/edit_base2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:hint="@string/enter_phone_number"
                android:maxLength="18"
                android:inputType="phone" />

            <include layout="@layout/line" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>

    <TextView
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="@string/post"
        android:textColor="@color/white"
        android:textSize="17sp" />
</com.zhy.autolayout.AutoRelativeLayout>
