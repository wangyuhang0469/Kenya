<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.kenya.ui.city.buyhouse.BuyHouseInfoActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/title_bar2" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buy_house_info_release"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include3">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50px">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="@string/topic" />

                <EditText
                    android:id="@+id/buy_house_info_title"
                    style="@style/edit_base2"
                    android:layout_marginLeft="300px"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_title"
                    android:maxLength="120"
                    android:paddingLeft="30px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_buy_house_info"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/buy_house_info_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50px"
                    android:gravity="center_vertical"
                    android:text="@string/house_type" />

                <TextView
                    android:id="@+id/buy_house_info_types"
                    android:layout_width="wrap_content"
                    android:layout_height="150px"
                    android:layout_marginLeft="300px"
                    android:gravity="center_vertical"
                    android:hint="@string/please_choose_the_type_of_hoose_e.g._one_bedroom"
                    android:maxLength="50"
                    android:paddingLeft="30px" />

                <ImageView
                    android:id="@+id/buy_house_iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60px"
                    android:padding="10dp"
                    android:src="@mipmap/my_center_inter2" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="@string/area" />

                <EditText
                    android:id="@+id/buy_house_info_square"
                    style="@style/edit_base2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="300px"
                    android:gravity="center_vertical"
                    android:hint="@string/Imported_housing_area"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingLeft="30px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_buy_house_address"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/buy_house_positoon"
                    android:layout_width="wrap_content"
                    android:layout_height="150px"
                    android:layout_marginLeft="50px"
                    android:gravity="center_vertical"
                    android:text="@string/location" />

                <TextView
                    android:id="@+id/buy_house_info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="150px"
                    android:layout_marginLeft="300px"
                    android:layout_marginRight="100px"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/choose_the_exact_location"
                    android:paddingLeft="30px"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/buy_house_inter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:padding="40px"
                    android:src="@mipmap/my_center_inter2" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="@string/total_prices" />

                <EditText
                    android:id="@+id/buy_house_info_price"
                    style="@style/edit_base2"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="300px"
                    android:gravity="center_vertical"
                    android:hint="@string/Please_enter_the_total_price_you_want_to_sell"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="@string/Contact" />

                <EditText
                    android:id="@+id/buy_house_info_person"
                    style="@style/edit_base2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="300px"
                    android:gravity="center_vertical"
                    android:hint="@string/Enter_the_name"
                    android:maxLength="50"
                    android:paddingLeft="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="@string/Phone" />

                <EditText
                    android:id="@+id/buy_house_info_phone"
                    style="@style/edit_base2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="300px"
                    android:gravity="center_vertical"
                    android:hint="@string/Enter_a_contact_number"
                    android:maxLength="50"
                    android:paddingLeft="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px">

                <EditText
                    android:id="@+id/buy_house_info_desc"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:hint="@string/describe_in_words_about_other_details_of_your_house"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLength="1000"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="30px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/buy_house_info_img1"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/buy_house_info_img2"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/buy_house_info_img3"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:src="@drawable/city_used_camera" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">

                <ImageView
                    android:id="@+id/buy_house_info_img4"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/city_used_camera" />

                <ImageView
                    android:id="@+id/buy_house_info_img5"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/city_used_camera" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>

    <TextView
        android:id="@+id/buy_house_info_release"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="@string/send_housing_resource"
        android:textColor="@color/white"
        android:textSize="17sp" />
</com.zhy.autolayout.AutoRelativeLayout>
