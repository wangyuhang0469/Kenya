<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.kenya.ui.myself.MyselfFragment">
    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/title_bar" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="290px"
                    android:layout_height="290px"
                    android:layout_marginTop="50px"
                    android:src="@drawable/logo" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/my_center_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="康召辉"
                        android:textSize="38px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@+id/my_center_name"
                        android:src="@mipmap/my_center_writer" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="手机号：15931127537"
                    android:textSize="38px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="520px"
                android:layout_marginTop="52px"
                android:background="@color/base_bg"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    style="@style/my_center_bar"
                    android:layout_marginTop="20px">

                    <ImageView
                        android:id="@+id/my_center_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/my_center_address2" />

                    <TextView
                        android:id="@+id/phone"
                        style="@style/my_center_tv"
                        android:layout_toRightOf="@id/my_center_address"
                        android:text="我的收获地址" />

                    <ImageView
                        style="@style/my_center_inter"
                        android:src="@mipmap/my_center_inter2" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <include layout="@layout/line" />

                <com.zhy.autolayout.AutoRelativeLayout style="@style/my_center_bar">

                    <ImageView
                        android:id="@+id/my_center_infor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/my_center_info2" />

                    <TextView
                        style="@style/my_center_tv"
                        android:layout_toRightOf="@id/my_center_infor"
                        android:text="我发布的信息" />

                    <ImageView
                        style="@style/my_center_inter"
                        android:src="@mipmap/my_center_inter2" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <include layout="@layout/line" />

                <com.zhy.autolayout.AutoRelativeLayout style="@style/my_center_bar">

                    <ImageView
                        android:id="@+id/my_center_bink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/my_center_bink2" />

                    <TextView
                        style="@style/my_center_tv"
                        android:layout_toRightOf="@id/my_center_bink"
                        android:text="我要申请电车" />

                    <ImageView
                        style="@style/my_center_inter"
                        android:src="@mipmap/my_center_inter2" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout style="@style/my_center_bar">

                <ImageView
                    android:id="@+id/my_center_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/my_center_points2" />

                <TextView
                    style="@style/my_center_tv"
                    android:layout_toRightOf="@id/my_center_points"
                    android:text="我的积分" />

                <ImageView
                    style="@style/my_center_inter"
                    android:src="@mipmap/my_center_inter2" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout style="@style/my_center_bar">

                <ImageView
                    android:id="@+id/my_center_purse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/my_center_purse2" />

                <TextView
                    style="@style/my_center_tv"
                    android:layout_toRightOf="@id/my_center_purse"
                    android:text="我的钱包" />

                <ImageView
                    style="@style/my_center_inter"
                    android:src="@mipmap/my_center_inter2" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>

</com.zhy.autolayout.AutoLinearLayout>
