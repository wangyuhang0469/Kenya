<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.kenya.ui.myself.MyselfFragment">
    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/title_bar" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="230px"
                    android:layout_height="230px"
                    android:layout_marginTop="50px"
                    android:src="@drawable/avatar" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/myName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200px"
                    android:layout_marginRight="200px"
                    android:gravity="center_vertical"
                    android:paddingBottom="30px"
                    android:paddingTop="20px">

                    <TextView
                        android:id="@+id/my_center_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/textBlack1" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@+id/my_center_name"
                        android:src="@mipmap/my_center_writer" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="52px"
                    android:textColor="@color/textBlack1" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_bg"
                android:orientation="vertical"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/myAddress"
                    style="@style/my_center_bar">

                    <ImageView
                        android:id="@+id/my_center_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/my_center_address2" />

                    <TextView
                        style="@style/my_center_tv"
                        android:layout_toRightOf="@id/my_center_address"
                        android:text="我的收获地址" />

                    <ImageView
                        style="@style/my_center_inter"
                        android:src="@mipmap/my_center_inter2" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <include layout="@layout/line" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/myRelease"
                    style="@style/my_center_bar">

                    <ImageView
                        android:id="@+id/my_center_infor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/my_center_info2" />

                    <TextView
                        style="@style/my_center_tv"
                        android:layout_toRightOf="@id/my_center_infor"
                        android:text="我发布的信息" />

                    <ImageView
                        style="@style/my_center_inter"
                        android:src="@mipmap/my_center_inter2" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <include layout="@layout/line" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/myCar"
                    style="@style/my_center_bar">

                    <ImageView
                        android:id="@+id/my_center_bink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/my_center_bink2" />

                    <TextView
                        style="@style/my_center_tv"
                        android:layout_toRightOf="@id/my_center_bink"
                        android:text="我要申请电车" />

                    <ImageView
                        style="@style/my_center_inter"
                        android:src="@mipmap/my_center_inter2" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/myPoint"
                style="@style/my_center_bar">

                <ImageView
                    android:id="@+id/my_center_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/my_center_points2" />

                <TextView
                    style="@style/my_center_tv"
                    android:layout_toRightOf="@id/my_center_points"
                    android:text="我的积分" />

                <ImageView
                    style="@style/my_center_inter"
                    android:src="@mipmap/my_center_inter2" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/myVallet"
                style="@style/my_center_bar">

                <ImageView
                    android:id="@+id/my_center_purse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/my_center_purse2" />

                <TextView
                    style="@style/my_center_tv"
                    android:layout_toRightOf="@id/my_center_purse"
                    android:text="我的钱包" />

                <ImageView
                    style="@style/my_center_inter"
                    android:src="@mipmap/my_center_inter2" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <include layout="@layout/line" />


        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>

</com.zhy.autolayout.AutoLinearLayout>
