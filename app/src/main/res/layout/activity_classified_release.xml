<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/title_bar2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please Upload Your Advertisement"
        android:layout_above="@+id/img"
        android:layout_marginBottom="50px"/>


    <com.example.administrator.kenya.view.RectangleImageView
        android:id="@+id/img"
        android:layout_width="400px"
        android:layout_height="600px"
        android:layout_marginLeft="30px"
        android:src="@drawable/city_used_camera"
        android:layout_centerInParent="true"/>



    <TextView
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="@string/post"
        android:textColor="@color/white"
        android:textSize="17sp" />
</com.zhy.autolayout.AutoRelativeLayout>
