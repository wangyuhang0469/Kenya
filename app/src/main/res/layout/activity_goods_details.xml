<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_bg"
    tools:context="com.example.administrator.kenya.ui.city.used.GoodsDetailsActivity">

    <include layout="@layout/title_bar2"/>

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144px"
        android:layout_marginBottom="160px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="800px"
                app:delay_time="5000"
                app:indicator_height="7.5dp"
                app:indicator_margin="5dp"
                app:indicator_width="7.5dp"
                app:indicator_drawable_selected="@drawable/bg4dp_theme_btn"/>

            <TextView
                android:id="@+id/goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack1"
                android:textSize="20sp"
                android:layout_marginTop="40px"
                android:layout_marginLeft="30px"/>


            <TextView
                android:id="@+id/goodsprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textgreen1"
                android:textSize="20sp"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"/>

            <TextView
                android:id="@+id/goodsdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack2"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="43px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginBottom="44px"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/base_bg"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="252px">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="152px"
                    android:layout_height="152px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="50px"
                    android:layout_marginBottom="50px"
                    android:src="@drawable/linshi4"/>

                <TextView
                    android:id="@+id/goodsusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlack1"
                    android:layout_toRightOf="@id/avatar"
                    android:layout_marginTop="66px"
                    android:layout_marginLeft="20px"/>

                <TextView
                    android:id="@+id/goodsphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textgreen1"
                    android:layout_toRightOf="@id/avatar"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="66px"
                    android:layout_marginLeft="20px"/>

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>




    </com.example.administrator.kenya.view.MyObervalbleScrollView>

    <TextView
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="拨号"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</com.zhy.autolayout.AutoRelativeLayout>
