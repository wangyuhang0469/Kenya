<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/city_login_bg"
    android:orientation="vertical"
    tools:context=".ui.myself.ForgetPasswordActivity">

    <include layout="@layout/login_title_bar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="2dp">

        <com.zhy.autolayout.AutoLinearLayout style="@style/bar1">

            <ImageView
                android:layout_width="44px"
                android:layout_height="38px"
                android:src="@mipmap/forget_pwd_phone" />

            <EditText
                android:id="@+id/phone"
                style="@style/edit_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:inputType="phone" />
        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line" />


        <com.zhy.autolayout.AutoLinearLayout style="@style/bar1">

            <ImageView
                android:id="@+id/img001"
                android:layout_width="44px"
                android:layout_height="35px"
                android:layout_centerVertical="true"
                android:src="@mipmap/register_code" />

            <EditText
                android:id="@+id/verifyCode"
                style="@style/edit_base"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/img001"
                android:layout_toStartOf="@+id/getVerifyCode"
                android:hint="请输入验证码"
                android:inputType="number" />

            <Button
                android:id="@+id/getVerifyCode"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="60px"
                android:background="@drawable/bg20dp_theme"
                android:text=" 获取验证码 "
                android:textColor="@color/white"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>


        <include layout="@layout/line" />

        <com.zhy.autolayout.AutoLinearLayout style="@style/bar1">

            <ImageView
                android:layout_width="39px"
                android:layout_height="33px"
                android:src="@mipmap/register_pwd" />

            <EditText
                android:id="@+id/password"
                style="@style/edit_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码(8-16位数字或字母)"
                android:password="true" />
        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/updatePassword"
        style="@style/btn"
        android:layout_marginTop="100px"
        android:background="@drawable/bg20dp_theme"
        android:text="更改密码"
        android:textColor="@color/white" />
</com.zhy.autolayout.AutoLinearLayout>
