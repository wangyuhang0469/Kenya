<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    tools:context="com.example.administrator.kenya.ui.city.house.HouseDetailActivity">

    <include layout="@layout/title_bar2" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="800px"
                app:delay_time="5000"
                app:indicator_drawable_selected="@drawable/bg4dp_theme_btn"
                app:indicator_height="7.5dp"
                app:indicator_margin="5dp"
                app:indicator_width="7.5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:lineSpacingMultiplier="1.3"
                android:text="恒大御景半岛，精装两室，家具家电齐全，拎包入住，首次出租"
                android:textColor="@color/textBlack2"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="50px"
                android:text="$180/月"
                android:textColor="@color/textgreen1"
                android:textSize="50px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="40px"
                android:background="@color/line1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:text="2室2厅1卫"
                android:textSize="38px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/base_bg" />


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="252px">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="152px"
                    android:layout_height="152px"
                    android:layout_marginBottom="50px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="50px"
                    android:src="@drawable/linshi4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="66px"
                    android:layout_toRightOf="@id/avatar"
                    android:text="王小花"
                    android:textColor="@color/textBlack1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="66px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/avatar"
                    android:text="手机：18332569875"
                    android:textColor="@color/textgreen1" />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>

    <TextView
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="拨号"
        android:textColor="@color/white"
        android:textSize="17sp" />

</com.zhy.autolayout.AutoRelativeLayout>
