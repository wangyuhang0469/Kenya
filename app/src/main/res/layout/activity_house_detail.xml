<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    tools:context="com.example.administrator.kenya.ui.city.house.HouseDetailActivity">

    <include layout="@layout/title_bar2" />

    <com.example.administrator.kenya.view.MyObervalbleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144px"
        android:layout_above="@+id/call">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="800px"
                app:delay_time="5000"
                app:indicator_drawable_selected="@drawable/bg4dp_theme_btn"
                app:indicator_height="7.5dp"
                app:indicator_margin="5dp"
                app:indicator_width="7.5dp" />

            <TextView
                android:id="@+id/house_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack1"
                android:textSize="20sp"
                android:layout_marginTop="40px"
                android:layout_marginLeft="30px"/>

            <TextView
                android:id="@+id/house_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack2"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">

                <TextView
                    android:id="@+id/house_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:textColor="@color/textgreen1"
                    android:textSize="50px" />

                <TextView
                    android:id="@+id/house_detail_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="30px"
                    android:textSize="38px"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </com.zhy.autolayout.AutoRelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="40px"
                android:background="@color/line1" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <ImageView
                    android:id="@+id/house_address_img"
                    android:layout_width="wrap_content"
                    android:layout_height="150px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:src="@mipmap/house_address" />

                <TextView
                    android:id="@+id/house_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_toRightOf="@+id/house_address_img"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:textColor="@color/textBlack2"
                    android:textSize="38px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/base_bg" />


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="252px">

                <ImageView
                    android:id="@+id/house_user_img"
                    android:layout_width="152px"
                    android:layout_height="152px"
                    android:layout_marginBottom="50px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="50px"
                    android:src="@drawable/linshi4" />

                <TextView
                    android:id="@+id/house_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="66px"
                    android:layout_toRightOf="@id/house_user_img"
                    android:textColor="@color/textBlack1" />

                <TextView
                    android:id="@+id/house_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="66px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/house_user_img"
                    android:textColor="@color/textgreen1" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.example.administrator.kenya.view.MyObervalbleScrollView>

    <TextView
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/theme_btn"
        android:gravity="center"
        android:text="拨号"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</com.zhy.autolayout.AutoRelativeLayout>
