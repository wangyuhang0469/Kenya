<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/house_image"
        android:layout_width="360px"
        android:layout_height="270px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginBottom="50px"/>

    <TextView
        android:id="@+id/house_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/house_image"
        android:layout_marginRight="30px"
        android:layout_toRightOf="@id/house_image"
        android:textColor="@color/textBlack1" />

    <TextView
        android:id="@+id/house_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/house_image"
        android:layout_toRightOf="@id/house_image"
        android:textColor="@color/textBlack2"
        android:textSize="13sp" />



    <TextView
        android:id="@+id/delete"
        android:layout_width="156px"
        android:layout_height="70px"
        android:layout_alignBottom="@id/house_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:text="删除"
        android:textSize="13sp"
        android:textColor="@color/textgreen1"
        android:gravity="center"
        android:background="@drawable/bg4dp_theme_white"/>

    <TextView
        android:id="@+id/house_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/house_Title"
        android:layout_toRightOf="@id/house_image"
        android:textColor="@color/textBlack3"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/house_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/house_phone"
        android:layout_marginBottom="10px"
        android:layout_toRightOf="@id/house_image"
        android:textColor="@color/textgreen1"
        android:textSize="17sp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:background="@color/base_bg" />

</com.zhy.autolayout.AutoRelativeLayout>