<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/funds_image"
        android:layout_width="360px"
        android:layout_height="270px"
        android:layout_margin="30px" />

    <TextView
        android:id="@+id/funds_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/funds_image"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:maxLines="2"
        android:layout_toRightOf="@id/funds_image"
        android:textColor="@color/textBlack1" />

    <TextView
        android:id="@+id/funds_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/funds_image"
        android:layout_marginBottom="10px"
        android:layout_toRightOf="@id/funds_image"
        android:textColor="@color/textBlack2"
        android:maxLength="23"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/funds_call"
        android:layout_width="182px"
        android:layout_height="62px"
        android:layout_alignBottom="@+id/funds_image"
        android:layout_alignEnd="@+id/funds_Title"
        android:layout_alignRight="@+id/funds_Title"
        android:background="@drawable/bg4dp_theme_btn"
        android:gravity="center"
        android:text="@string/call"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/funds_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/funds_phone"
        android:layout_toRightOf="@id/funds_image"
        android:textColor="@color/textgreen1"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#989898" />

</com.zhy.autolayout.AutoRelativeLayout>