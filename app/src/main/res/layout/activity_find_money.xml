<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.kenya.ui.city.findmoney.FindMoneyActivity">

    <ImageView
        android:id="@+id/find_money_back"
        android:layout_width="wrap_content"
        android:layout_height="144px"
        android:adjustViewBounds="true"
        android:padding="41px"
        android:src="@mipmap/resume_bank" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:layout_marginRight="82px"
        android:layout_toRightOf="@+id/find_money_back"
        app:tabIndicatorColor="@color/base_bg"
        app:tabSelectedTextColor="@color/textBlack1"
        app:tabTextAppearance="@style/MyTabLayoutTextAppeara" />

    <TextView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="144px"
        android:adjustViewBounds="true"
        android:padding="30px"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="To Post"
        android:textColor="@color/textgreen1"
        android:textSize="16sp"/>
    <!--app:tabMode="scrollable"-->

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/city_home_job_release"
        android:layout_below="@id/tab_layout" />
</com.zhy.autolayout.AutoRelativeLayout>
