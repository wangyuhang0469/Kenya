<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.kenya.ui.city.buyhouse.ProvinceCityDetailsActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/title_bar2" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buy_house_province_city_sure"
        android:layout_below="@+id/include3"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="省的名称" />

            <TextView
                android:id="@+id/buy_house_info_title"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:hint="省的名称"
                android:maxLength="120"
                android:paddingLeft="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="市的名称" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:hint="市的名称"
                android:maxLength="120"
                android:paddingLeft="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="详细地址" />

            <EditText
                style="@style/edit_base2"
                android:gravity="center_vertical"
                android:hint="请输入详细地址"
                android:maxLength="120"
                android:paddingLeft="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/buy_house_province_city_sure"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:background="@color/textgreen3"
        android:gravity="center"
        android:text="确定"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="17sp" />

</com.zhy.autolayout.AutoRelativeLayout>
