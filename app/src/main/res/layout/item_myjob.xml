<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/job_image"
        android:layout_width="350px"
        android:layout_height="250px"
        android:layout_margin="30px"
        android:background="@drawable/avatar"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/job_ll_up"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/job_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack1"
            android:text="@string/expected_job"/>

        <TextView
            android:id="@+id/job_want"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textgreen1"
            android:textSize="17sp"
            android:layout_marginLeft="10px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#989898" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/job_ll_down"
        android:layout_width="match_parent"
        android:layout_height="149px"
        android:layout_below="@id/job_ll_up"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack2"
            android:textSize="13sp" />

        <View
            android:id="@+id/job_line1"
            android:layout_width="1px"
            android:layout_height="40px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/job_name"
            android:background="@color/textBlack2"></View>

        <TextView
            android:id="@+id/job_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/job_line1"
            android:textColor="@color/textBlack2"
            android:textSize="13sp" />

        <View
            android:id="@+id/job_line2"
            android:layout_width="1px"
            android:layout_height="40px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/job_sex"
            android:background="@color/textBlack2"></View>

        <TextView
            android:id="@+id/job_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/job_line2"
            android:textColor="@color/textBlack2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="156px"
            android:layout_height="70px"
            android:layout_marginRight="8dp"
            android:text="@string/delete"
            android:textSize="13sp"
            android:textColor="@color/textgreen1"
            android:gravity="center"
            android:background="@drawable/bg4dp_theme_white"
            android:layout_alignTop="@+id/job_age"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:background="@color/base_bg2" />


</com.zhy.autolayout.AutoLinearLayout>