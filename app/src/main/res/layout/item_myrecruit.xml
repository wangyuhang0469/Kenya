<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="350px"
        android:layout_height="250px"
        android:layout_margin="30px"
        android:background="@drawable/linshi5"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/company_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:textColor="@color/textBlack1" />

        <TextView
            android:id="@+id/company_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textgreen1"
            android:textSize="17sp" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#989898" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="149px"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/company_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_Title"
            android:layout_toRightOf="@id/company_image"
            android:textColor="@color/textBlack3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="156px"
            android:layout_height="70px"
            android:layout_alignBottom="@id/liveimgs"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:background="@drawable/bg4dp_theme_white"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/textgreen1"
            android:textSize="13sp" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:background="@color/base_bg2" />

</com.zhy.autolayout.AutoLinearLayout>