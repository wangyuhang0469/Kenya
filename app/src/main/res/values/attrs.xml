<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeStyle">
        <attr name="marqueeTextSize" format="dimension" />
        <attr name="marqueeTextColor" format="color" />
        <attr name="marqueeInterval" format="integer|reference" />
        <attr name="marqueeTextGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>

    </declare-styleable>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

</resources>