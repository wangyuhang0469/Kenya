<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f1f1f1</item>
        <item name="colorPrimaryDark">#f1f1f1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.dark_action_bar" parent="AppTheme">
        <item name="colorPrimaryDark">#4b4b4b</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.green_action_bar" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimaryDark">@color/green_action_bar</item>
    </style>


    <style name="FullScreenDialog" parent="android:Theme.Dialog">
        <!-- 窗口设为无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 窗口浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/touming</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--&lt;!&ndash; 边框 &ndash;&gt;-->
        <item name="android:windowFrame">@null</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="btn">
        <item name="android:layout_width">1014px</item>
        <item name="android:layout_height">120px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bar1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">144px</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!--登陆界面填写样式-->
    <style name="edit_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack2</item>
        <item name="android:textColorHint">@color/textBlack3</item>
    </style>


    <style name="edit_base2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack2</item>
        <item name="android:textColorHint">@color/textBlack3</item>
    </style>

    <!-- view_line 同城界面的间隔线 -->
    <style name="cite_home_view_line" parent="base_widthMatch_heightWrapContent">
        <item name="android:layout_height">20px</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- Base with height match wrap content -->
    <style name="base_widthMatch_heightWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--个人中心item布局-->
    <style name="my_center_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="my_center_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">26px</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="my_center_inter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30px</item>
    </style>
    <!--Tab字体-->
    <style name="MyTabLayoutTextAppeara" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <!--选择时间的样式-->
    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    <!--时间样式-->
    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <!--简历详情字体的设置-->
    <style name="detail_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:textSize">46px</item>
        <item name="android:textColor">@color/textBlack3</item>
    </style>

    <style name="detail_tv_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">116px</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textBlack1</item>
    </style>

    <!--底部弹出对话框样式-->
    <style name="PopupWindow">
        <item name="android:windowEnterAnimation">@anim/window_in</item>
        <item name="android:windowExitAnimation">@anim/window_out</item>
    </style>
    <!--招聘信息窗口样式-->
    <style name="adverty_info_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
        <item name="android:textSize">38px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">30px</item>
    </style>
    <!--招聘信息窗口字体样式-->
    <style name="adverty_info_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textBlack2</item>
    </style>
</resources>
