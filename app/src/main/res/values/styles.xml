<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/green_action_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.dark_action_bar" parent="AppTheme">
        <item name="colorPrimaryDark">#4b4b4b</item>
    </style>

    <style name="AppTheme.grey_action_bar" parent="AppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">#f1f1f1</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">1014px</item>
        <item name="android:layout_height">120px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bar1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">144px</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!--登陆界面填写样式-->
    <style name="edit_base">
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack2</item>
        <item name="android:textColorHint">@color/textBlack3</item>
    </style>


    <style name="edit_base2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack2</item>
        <item name="android:textColorHint">@color/textBlack3</item>
    </style>

    <!-- view_line 同城界面的间隔线 -->
    <style name="cite_home_view_line" parent="base_widthMatch_heightWrapContent">
        <item name="android:layout_height">20px</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- Base with height match wrap content -->
    <style name="base_widthMatch_heightWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--个人中心item布局-->
    <style name="my_center_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="my_center_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">26px</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>
    <!--Tab字体-->
    <style name="MyTabLayoutTextAppeara" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>
