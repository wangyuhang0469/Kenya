<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">1020px</item>
        <item name="android:layout_height">120px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">46px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bar1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">148px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">60px</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!--登陆界面填写样式-->
    <style name="edit_base">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:textSize">38px</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- view_line 同城界面的间隔线 -->
    <style name="cite_home_view_line" parent="base_widthMatch_heightWrapContent">
        <item name="android:layout_height">20px</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- Base with height match wrap content -->
    <style name="base_widthMatch_heightWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
